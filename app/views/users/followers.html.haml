- content_for :page_title do
  = t('panua.users.followers.title', :screen_name => @user.screen_name)

#followers
  %h1 #{t('panua.users.followers.title', :screen_name => @user.screen_name)}
  - if @user.followers.present?
    %ul
      - @user.followers.each do |f|
        = render 'users/following_followers', {:f => f}
  - else
    #empty
      %p #{t('panua.users.empty.followers')}

- content_for :javascript do
  = javascript_include_tag 'follow'
